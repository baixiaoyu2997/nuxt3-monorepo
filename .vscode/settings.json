// Do not modify this file unnecessarily. Consult the relevant person in charge before making changes.
{
  "editor.formatOnSave": true,
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit"
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css][postcss][less][scss][html][vue]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "stylelint.validate": ["css", "less", "postcss", "vue", "scss"],
  "[javascript][javascriptreact][typescript][typescriptreact][html][vue]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html"
  ],
  "stylelint.snippet": ["css", "less", "postcss", "vue", "scss"],
  "css.validate": false, // Prevent CSS draft features from reporting errors, let stylelint handle validation
  "postcss.validate": false, // Disable postcss validation
  "files.associations": {
    "*.css": "postcss" // Associate css with postcss extension
  },
  "emmet.includeLanguages": {
    "postcss": "css" // emmet supports postcss
  },
  "docthis.includeDescriptionTag": true,
  "docthis.includeMemberOfOnClassMembers": false,
  "prettier.htmlWhitespaceSensitivity": "ignore",
  "prettier.proseWrap": "never",
  // Specify the default formatting plugin
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.wordWrap": "on",
  "volar.codeLens.references": false,
  "volar.completion.autoImportComponent": false,
  "cSpell.words": [
    "commitlint",
    "typechain",
    "WBTC",
    "WETH",
    "Accu",
    "BHODL",
    "browserslistrc",
    "BTCB",
    "commitlintrc",
    "defu",
    "deorder",
    "deorderbook",
    "disableds",
    "esbuild",
    "headerbtn",
    "hodl",
    "Huobi",
    "lighthouserc",
    "MARKETCAP",
    "nuxi",
    "optoin",
    "Pancakeswap",
    "pinia",
    "pnpm",
    "stylelint",
    "stylelintignore",
    "stylelintrc",
    "typecheck",
    "UHODL",
    "unplugin",
    "Unstake",
    "vueuse",
    "walletconnect",
    "WBTC"
  ],
  "git.autoStash": true,
  "git.ignoreRebaseWarning": true,
  "git.autofetch": true,
  "git.enableCommitSigning": true,
  "git-graph.repository.sign.commits": true,
  "git-graph.repository.sign.tags": true,
  "vue.inlayHints.missingProps": true,
  "vue.codeActions.enabled": false,
  "[css][less][markdown][postcss][scss]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit"
    }
  },
  "[html][vue]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit",
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "prettier.trailingComma": "all"
  // "eslint.experimental.useFlatConfig": true,
  // "eslint.workingDirectories": [
  //   { "pattern": "./apps/*" },
  //   { "pattern": "./packages/*" }
  // ]
}
